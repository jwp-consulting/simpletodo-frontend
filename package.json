{
    "name": "projectify-frontend",
    "version": "0.0.1",
    "scripts": {
        "dev": "vite dev --host --port 3000",
        "build": "bin/prebuild.sh && vite build",
        "package": "vite package",
        "preview": "vite preview --port 3000",
        "check": "npm run lint && npm run svelte-check && npm run eslint",
        "svelte-check": "svelte-check --tsconfig tsconfig.json --diagnostic-sources js,svelte",
        "svelte-check:watch": "svelte-check --tsconfig tsconfig.json --diagnostic-sources js,svelte --watch",
        "eslint": "eslint .",
        "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. --cache --cache-strategy metadata .",
        "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. --cache --cache-strategy metadata .",
        "storybook": "storybook dev -p 6006 --no-open",
        "build-storybook": "storybook build"
    },
    "devDependencies": {
        "@storybook/addon-essentials": "^7.0.0-rc.3",
        "@storybook/addon-interactions": "^7.0.0-rc.3",
        "@storybook/blocks": "^7.0.0-rc.3",
        "@storybook/sveltekit": "^7.0.0-rc.3",
        "@storybook/testing-library": "^0.0.14-next.1",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.51.0",
        "eslint": "^8.34.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-storybook": "^0.6.10",
        "eslint-plugin-svelte3": "^4.0.0",
        "prettier": "^2.8.4",
        "prettier-plugin-svelte": "^2.9.0",
        "prettier-plugin-tailwindcss": "^0.2.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "storybook": "^7.0.0-rc.3"
    },
    "type": "module",
    "dependencies": {
        "@apollo/client": "^3.7.7",
        "@fontsource/fira-mono": "^4.5.10",
        "@steeze-ui/heroicons": "^1.1.1",
        "@steeze-ui/svelte-icon": "^1.3.2",
        "@sveltejs/adapter-static": "^1.0.6",
        "@sveltejs/kit": "^1.8.7",
        "@tailwindcss/line-clamp": "^0.4.2",
        "@tailwindcss/typography": "^0.5.9",
        "@types/lodash": "^4.14.191",
        "autoprefixer": "^10.4.13",
        "delay": "^5.0.0",
        "fuse.js": "^6.6.2",
        "lodash": "^4.17.21",
        "sass": "^1.58.0",
        "svelte-boring-avatars": "1.2.2",
        "svelte-check": "^3.0.4",
        "svelte-i18n": "^3.6.0",
        "svelte-preprocess": "^5.0.1",
        "tailwindcss": "^3.2.6",
        "tslib": "^2.5.0",
        "typescript": "^4.9.5"
    }
}
