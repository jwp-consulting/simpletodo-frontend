[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{prettierrc,html,scss,json,ts,js,cjs,svelte,css,yml}]
indent_style = space
indent_size = 4
max_line_length = 79

[*.md]
indent_style = space
# Why 2?
indent_size = 2
max_line_length = 79

[docs/guide.md]
indent_style = space
indent_size = 4
max_line_length = 79
